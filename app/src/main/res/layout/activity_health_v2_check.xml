<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <bsmart.technology.rru.base.utils.HeaderView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarHeight">

    </bsmart.technology.rru.base.utils.HeaderView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/resultLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/driverJobInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_case" />

                    <TextView
                        android:id="@+id/tvJobNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="JobNo"
                        android:textColor="@color/textTitle"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_car" />

                    <TextView
                        android:id="@+id/tvVehicleNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Vehicle"
                        android:textColor="@color/textTitle"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_container" />

                    <TextView
                        android:id="@+id/tvContainerNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="container"
                        android:textColor="@color/textTitle"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_location" />

                    <TextView
                        android:id="@+id/tvFrom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="from"
                        android:textColor="@color/textTitle"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_location" />

                    <TextView
                        android:id="@+id/tvTo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="to"
                        android:textColor="@color/textTitle"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QR Code"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/textTitle"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/bookId"
                    style="@style/CommonInputStyle" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Purposes :"
                    android:textColor="@color/textTitle"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/spinner1"
                    style="@style/CommonInputStyle"
                    android:text="Local" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Name "
                    android:textColor="@color/textTitle"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/fullName"
                    style="@style/CommonInputStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="ID/Passport "
                    android:textColor="@color/textTitle"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/passport"
                    style="@style/CommonInputStyle" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textTitle"
                android:text="1. Do you have any of the following new or worsening symptoms or signs?"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="New or worsening cough"
                    android:textColor="@color/textTitle"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/test1Result"
                    style="@style/CommonInputStyle"
                    android:hint="No" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Shortness of breath"
                    android:textColor="@color/textTitle"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/test2Result"
                    style="@style/CommonInputStyle"
                    android:hint="No" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Sore throat"
                    android:textColor="@color/textTitle"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/test3Result"
                    style="@style/CommonInputStyle"
                    android:hint="No" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Runny nose, sneezing or nasal congestion (in absence of underlying reasons for
symptoms such as seasonal allergies and post nasal drip)"
                    android:textColor="@color/textTitle"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/test4Result"
                    style="@style/CommonInputStyle"
                    android:hint="No" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Hoarse voice"
                    android:textColor="@color/textTitle"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/test5Result"
                    style="@style/CommonInputStyle"
                    android:hint="No" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Difficulty swallowing"
                    android:textColor="@color/textTitle"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/test6Result"
                    style="@style/CommonInputStyle"
                    android:hint="No" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="New smell or taste disorder(s)"
                    android:textColor="@color/textTitle"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/test7Result"
                    style="@style/CommonInputStyle"
                    android:hint="No" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Nausea/vomiting, diarrhea, abdominal pain"
                    android:textColor="@color/textTitle"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/test8Result"
                    style="@style/CommonInputStyle"
                    android:hint="No" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Unexplained fatigue/malaise"
                    android:textColor="@color/textTitle"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/test9Result"
                    style="@style/CommonInputStyle"
                    android:hint="No" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Chills"
                    android:textColor="@color/textTitle"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/test10Result"
                    style="@style/CommonInputStyle"
                    android:hint="No" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Headache"
                    android:textColor="@color/textTitle"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/test11Result"
                    style="@style/CommonInputStyle"
                    android:hint="No" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="2. Have you travelled to COVID -19 high risk regions in the past 14 days? "
                    android:textColor="@color/textTitle"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/test12Result"
                    style="@style/CommonInputStyle"
                    android:hint="No" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="3.Do you have a fever? "
                    android:textColor="@color/textTitle"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/test13Result"
                    style="@style/CommonInputStyle"
                    android:hint="No" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="4. Have you had close contact with anyone with respiratory illness or a confirmed or probable case of COVID-19?"
                    android:textColor="@color/textTitle"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/test14Result"
                    style="@style/CommonInputStyle"
                    android:hint="No" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="5. Did you wear the required and/or recommended Personal Protective Equipment (PPE) (e.g., goggles, gloves, mask and gown or N95 with aerosol generating medical procedures (AGMPs)) when you had close
contact with a suspected or confirmed case of COVID-19?"
                    android:textColor="@color/textTitle"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/test15Result"
                    style="@style/CommonInputStyle"
                    android:hint="No" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Temperature in degree C"
                    android:textColor="@color/textTitle"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/temperture"
                    style="@style/CommonInputStyle"
                    android:hint="36.9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health Declaration "
                    android:textColor="@color/textTitle"
                    android:textSize="13sp" />

                <CheckBox
                    android:id="@+id/healthDec"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:textColor="@color/textTitleSecond"
                    android:textSize="@dimen/sp_13"
                    android:enabled="false"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="Yes" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Remarks"
                    android:textColor="@color/textTitle"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/remark"
                    style="@style/CommonInputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Remarks"
                    android:lines="3"
                    android:maxLength="250"
                    android:singleLine="false" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvFailed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Covid-19 tested positive! Please contact Supervisor for further action! "
                android:textColor="@color/colorWarning"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvCertificateBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:background="@drawable/login_button"
                android:gravity="center"
                android:singleLine="true"
                android:text="View COVID-19 Test Certificate"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvVaccinationBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:background="@drawable/login_button"
                android:gravity="center"
                android:singleLine="true"
                android:text="View Vaccination Certificate"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>